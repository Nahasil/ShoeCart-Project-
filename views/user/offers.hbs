<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet" />

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="/stylesheets/side-style.css" />

<div class="mx-5 d-md-flex align-items-stretch">
  <!-- Page Content  -->

  <div id="content" class="ml-lg-4">

    <div class="">

      <div class="container">
        <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card" style="background-color: rgb(248, 248, 248)">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    {{! <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="" class="rounded-circle"
                      width="150"> }}
                    <div class="mt-3">
                      {{!-- <img src="/images/admindp.jpg" alt="" /> --}}
                      <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_bo8vqwyw.json"
                        background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay>
                      </lottie-player>
                      <h4>{{user.name}}</h4>
                      {{! <button class="btn btn-primary">Follow</button> }}
                    </div>
                  </div>
                </div>
              </div>
              <div style="background-color: rgb(248, 248, 248)">
                <div class="card mt-3">
                  <ul class="list-group list-group-flush">
                    <li style="background-color: rgb(248, 248, 248)"
                      class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <a href="/user-profile">My Profile</a>
                    </li>
                    <li style="background-color: rgb(248, 248, 248)"
                      class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <a href="/profile-address">Address</a>
                    </li>
                    <li style="background-color: rgb(248, 248, 248)"
                      class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <a href="/orders">Orders</a>
                    </li>
                    <li style="background-color: rgb(248, 248, 248)"
                      class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <a href="/offers">Offers</a>
                    </li>
                    {{!-- <li style="background-color: rgb(248, 248, 248)"
                      class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <a href="/wallet">Wallet</a>
                    </li> --}}
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-8">

              <div class="row py-3 mr-0 ml-auto" style="background-color: rgb(248, 248, 248);  max-width: 45rem;">

                <div class="col-9">
                  <h5>Offers</h5>

                </div>
              </div>


              {{#if coupon}}
              <div class="mt-3 row py-3 mr-0 ml-auto d-flex justify-content-between"
                style="background-color: rgb(248, 248, 248);  max-width: 45rem;">

                <div class="col-12 pl-sm-4">
                  <h5 style="color: rgb(5, 5, 100); font-size: x-large; font-weight: bold;">Coupons</h5>

                  {{#each coupon}}
                  <h6>Enter <span style="color: red;font-size: large; font-weight: bold;">{{this.couponcode}}</span> and get {{this.discount}} % OFF,Enjoy!

                  </h6>
                  <p>{{this.description}}</p>
                  {{!-- <p style="font-size: small;">Expire date : {{this.expireAt}}</p>
                  <p style="font-size: x-small;">*min purchase of {{this.minamount}} Rs.</p> --}}

                  {{/each}}
                </div>
              </div>
              {{/if}}

              {{!-- {{#if productOffer}}
              <div class="mt-3 row py-3 mr-0 ml-auto d-flex justify-content-between"
                style="background-color: rgb(248, 248, 248);  max-width: 45rem;">

                {{#each productOffer}}
                <div class="row d-flex pb-2">
                  <div class="col-2">
                    <img style="width: 70px; " src="/images/product/{{this.ProdId}}image1.jpg">
                  </div>
                  <div class="col-10 ">
                    <p>Now get <br>
                    <span style="color: rgb(196, 155, 20); font-size: x-large; font-weight: bold;">{{this.discount}}%</span>  discount <br>on 
                    {{this.productname}}</p>
                  </div>
                </div>
                {{/each}}
              </div>

              {{/if}} --}}


              {{#if categoryOffer}}
              <div class="mt-3 row py-3 mr-0 ml-auto d-flex justify-content-between"
                style="background-color: rgb(248, 248, 248);  max-width: 45rem;">

                <div class="col-6 pl-sm-4">
                  {{#each categoryOffer}}
                  <p>Now get <span style="color: red; font-size: x-large; font-weight: bold;">{{this.offer}}% <br></span> discount on <span style="color: rgb(5, 5, 100);font-size: large; font-weight: bold;">{{this.category}}'s Shoes</span></p>

                  {{/each}}
                </div>
              </div>{{/if}}

            </div>
          </div>

        </div>
      </div>
      <style>
        .main-body {
          padding: 15px;
        }

        .card {
          box-shadow: 0 1px 3px 0 rgba(248,
              245, 245, 0.1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }

        .card {
          position:
            relative;
          display: flex;
          flex-direction: column;
          min-width: 0;
          word-wrap: break-word;
          background-color: #fff;
          background-clip:
            border-box;
          border: 0 solid rgba(247, 247, 247, 0.125);
          border-radius:
            .25rem;
        }

        .card-body {
          flex: 1 1 auto;
          min-height: 1px;
          padding: 1rem;
        }

        table {
          table-layout: fixed;
          width: 330px;
        }
      </style>

    </div>
  </div>

  <nav id="sidebar" class="d-none d-lg-block position-relative mr-4 mt-3">
    <div class="p-4 pt-5 sticky-top mt-5">
      <div class="mb-5 sticky-top">
        <h4>ShoeCart</h4>

        <h3>Hi,<span style="text-transform: capitalize; color: rgb(11, 11, 131);"> {{user.Name}}</span></h3>

        <h5>Explore collections</h5>
        <a href="/" class="btn btn btn-outline-dark w-100">Explore</a>

      </div>

    </div>
  </nav>

</div>



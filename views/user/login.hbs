<div class="row m-4 p-3">
    <div class="col-md-6 m-auto add">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
            
                <div class="form-group">
                    <label for="">Email Adress</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password">
                </div>
            {{#if loginErr}}
            <p class="error" style="color:crimson;">{{loginErr}} </p>
            {{/if}}
            <div>
                <a href="/signup" class="mt-5  link">Create new Account?</a>
                <button type="submit" class="btn btn-dark mt-3 ms-5" href="/login" >Login</button>
                
                   <a class="ms-5 mt-5 link" href="/otp-login" >Login with Phone Number</a>

            </div>
                
                
               
            </form>
        </div>
    </div>
</div>
